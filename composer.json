{
    "name": "alcidesrc/coloreeze",
    "type": "library",
    "license": "Unlicense",
    "description": "Color handling and manipulation library with support for Laravel integration",
    "keywords": ["color", "rgba", "hex", "cmyk", "cielab", "xyz", "hsb", "hsv", "hsl", "conversion", "color spaces"],
    "authors": [
        {
            "name": "Alcides Ramos",
            "email": "info@alcidesrc.com",
            "homepage": "https://alcidesrc.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/alcidesrc/coloreeze/issues",
        "source": "https://github.com/alcidesrc/coloreeze"
    },
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Coloreeze\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UnitTests\\": "tests/Unit",
            "FeatureTests\\": "tests/Feature"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.3.10"
        },
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Coloreeze\\ColoreezeServiceProvider"
            ],
            "aliases": {
                "Coloreeze": "Intervention\\Coloreeze\\Facades\\Coloreeze"
            }
        }
    },
    "scripts": {
        "tests": "phpunit --configuration=phpunit.xml --coverage-text --testdox --colors --order-by=random --random-order-seed=$(head -200 /dev/urandom | cksum | cut -f1 -d \" \")",
        "analyse": "phpstan analyse --configuration=phpstan.neon --ansi",
        "check-style": "phpcs -p --standard=PSR12 --exclude=Generic.Files.LineLength --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR12 --exclude=Generic.Files.LineLength --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    }
}
